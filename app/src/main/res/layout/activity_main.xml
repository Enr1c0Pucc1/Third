<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AE8F68"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Pucciplayer"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/btnResume"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:background="#D84315"
        android:onClick="onClick"
        android:text="Воспроизвести"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnPause"
        tools:layout_editor_absoluteX="105dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnPause"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:height="50dp"
        android:background="#D84315"
        android:onClick="onClick"
        android:text="Пауза"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnStop"
        tools:layout_editor_absoluteX="105dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:height="50dp"
        android:onClick="onClick"
        android:text="Стоп"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnBack"
        tools:layout_editor_absoluteX="105dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:onClick="onClick"
        android:text="Назад"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/btnForward"
        tools:layout_editor_absoluteX="105dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnForward"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:onClick="onClick"
        android:text="Вперед"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/switchLoop"
        tools:layout_editor_absoluteX="105dp"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/switchLoop"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="ПОВТОР"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="543dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnStream"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Интернет"
        app:layout_constraintEnd_toStartOf="@+id/btnRAW"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnSD"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SD карта"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toEndOf="@+id/btnRAW"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnRAW"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Телефон"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp" />

    <TextView
        android:id="@+id/sngName"
        android:layout_width="354dp"
        android:layout_height="78dp"
        android:background="#8A6D47"
        android:gravity="center"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appName"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="92dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="TextView"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="612dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>